/**index.wxss**/
.list {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
navigator {
  overflow: hidden;
}

.cell{
  margin-bottom:  20rpx;
  height: 200rpx;
  position: relative;
}
.imgs{
  float: right;
}
.imgs image { 
  display: block;
  width: 200rpx;
  height: 170rpx;
  margin-top: 15rpx;
}

.infos {
  float: left; 
  width: 480rpx;
  height: auto;
  padding: 20rpx 0 0 20rpx;
}

.title {
  font-size: 18px;
}

.date {
  padding-top: 50rpx;
  float: left;
  font-size: 14px;
  color: #aaa;
  position: relative;
}
.classification{
  padding-top: 50rpx;
  float: left;
  font-size: 14px;
  color: #aaa;
  position: relative;
  margin-right: 30rpx;
}